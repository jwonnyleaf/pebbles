{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["express"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
